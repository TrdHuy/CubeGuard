{
  "version": "0.3.0",
  "configurations": [
    {
      "name": "Debug Jest Tests All",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Current Jest Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand",
        "--config",
        "${workspaceFolder}/jest.config.js",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest.js"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "name": "PowerShell Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${cwd}"
    },
    {
      "type": "minecraft-js",
      "request": "attach",
      "name": "Attach to Minecraft",
      "mode": "listen",
      "localRoot": "${workspaceFolder}/BP/scripts",
      "host": "localhost",
      "port": 19144
    },
    {
      "type": "minecraft-js",
      "request": "attach",
      "name": "Attach Debug with Minecraft (Client)",
      "mode": "listen",
      "localRoot": "${workspaceFolder}/BP/scripts",
      "generatedSourceRoot": "${workspaceFolder}/BP/scripts",
      "sourceMapRoot": "${workspaceFolder}/BP/scripts",
      "port": 19144
    }
  ]
}